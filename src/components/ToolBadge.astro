---
/**
 * Tool Badge Component
 * Displays a surgical tool with its color indicator
 */

interface Props {
  name: string;
  color: string;
}

const { name, color } = Astro.props;
---

<div class="flex items-center gap-2 bg-gray-800 px-3 py-2 rounded border border-gray-700">
  <span 
    class="w-3 h-3 rounded-sm border border-gray-600" 
    style={`background-color: ${color}`}
  ></span>
  <span class="text-sm text-gray-300">{name}</span>
</div>
