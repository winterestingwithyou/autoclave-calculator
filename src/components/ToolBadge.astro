---
/**
 * Tool Badge Component
 * Displays a surgical tool with its image and color indicator
 */

type Props = {
  name: string;
  color: string;
  image?: string;
}

const { name, color, image } = Astro.props;
---

<div class="flex items-center gap-2 bg-neutral-800/80 px-3 py-2 rounded-lg border border-neutral-700/50 hover:border-neutral-600 transition-colors">
  {image ? (
    <img 
      src={image} 
      alt={name}
      class="w-6 h-6 object-contain" 
      loading="lazy"
    />
  ) : (
    <span 
      class="w-4 h-4 rounded-sm" 
      style={`background-color: ${color}`}
    ></span>
  )}
  <span class="text-sm text-neutral-300">{name}</span>
</div>
