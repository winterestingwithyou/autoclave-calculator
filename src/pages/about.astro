---
import Layout from "../layouts/Layout.astro";
import { TOOL_METADATA, AUTOCLAVE_IMAGE } from "../lib/tools";

const title = "About - Growtopia Autoclave Calculator";
const description =
  "Tentang Growtopia Autoclave Calculator. Tool gratis untuk menghitung hasil autoclave surgical tools dan membandingkan nilai WL.";

const tools = Object.values(TOOL_METADATA);
---

<Layout title={title} description={description}>
