<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  /* Custom breakpoint for extra small screens */
  @media (min-width: 360px) {
    .xs\:inline {
      display: inline;
    }
    .xs\:hidden {
      display: none;
    }
  }

  @media (max-width: 359px) {
    .hidden.xs\:inline {
      display: none;
    }
    .xs\:hidden {
      display: inline;
    }
  }
</style>
