            <a
              href="/"
              class:list={[
                "rounded-lg px-3 py-2 text-sm font-medium transition-colors",
                currentPath === "/"
                  ? "bg-amber-500/10 text-amber-400"
                  : "text-gray-400 hover:bg-gray-800 hover:text-white",
              ]}
